@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "Master.cshtml";
}

@section MetaData
{
    <title>@Model.Value("seoTitle")</title>
    <meta name="description" content="@Model.Value("seoDescription")">
    @{
        string[] tagsList = (string[])Model.Value("seoKeywords");

        if (tagsList.Count() > 0)
        {
            <meta name="keywords" content="@string.Join(",", tagsList)">
        }
    }
}

<!DOCTYPE HTML>

<!-- end header section -->
<!-- slider section -->
<section class=" slider_section position-relative">

    <div class="slider_bg-container">

    </div>
    <div class="slider-container">

        <div class="detail-box">
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="sr-only">Next</span>
            </a>
            <h1>
                @Model.Value("homePageTitle")
            </h1>
            <div>
                <a class="slider-link" target="_blank" href="https://www.google.com/maps/dir//6480+E+Main+St,+Reynoldsburg,+OH+43068,+USA/39.9553347,-82.8256091,17.75/data=!4m8!4m7!1m0!1m5!1m1!1s0x8838637ce7a586af:0x2adebd1fc3767d65!2m!1d-82.8243311!2d39.9552923">Get Direction For Office</a>
            </div>
            <p>
                @Model.Value("homePageBodyText")
            </p>
            <div>
                <a class="slider-link" href="/book-now">Book Now</a>
                <a class="slider-link" href="tel:(614) 721-5067">Check Your Status</a>
            </div>
        </div>
        <div class="img-box">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/images/slider-img.jpg" alt="">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/slider-img.jpg" alt="">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/slider-img.jpg" alt="">
                    </div>
                </div>

            </div>

        </div>
    </div>

</section>

<!-- about section -->
<section class="about_section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="detail-box">
                    <h6>
                        1st Choice Fingerprinting
                    </h6>
                    <div class="custom_heading-container">
                        <h2>
                            About Us
                        </h2>
                        <hr>
                    </div>
                    <p>
                        <h4>@Model.Value("homePageFirstSubSectionTitle") </h4>

                        @Model.Value("homePageFirstSubSectionBodyText")
                    </p>
                    <div>
                        <a href="/about-us">Read More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="img-box">
                    <img src="/images/about_us_img.png" alt="">
                </div>
            </div>
        </div>

    </div>
</section>

<section class="about_section layout_padding2-bottom">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="img-box">
                    <img src="/images/an-increased-need-for-security.png" alt="">
                </div>
            </div>
            <div class="col-md-6">
                <div class="detail-box">
                    <h6>
                        1st Choice Fingerprinting
                    </h6>
                    <div class="custom_heading-container">
                        <h2>
                            @Model.Value("homePageRightSubSectionTitle")

                        </h2>
                        <hr>
                    </div>
                    <p>
                    <p>
                        @Model.Value("homePageRightSubSectionBodyText")
                    </p>
                    <div>
                        <a href="/who-we-are">Read More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>